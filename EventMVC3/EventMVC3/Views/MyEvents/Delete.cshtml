@model EventMVC3.Models.Event
@{
    ViewData["Title"] = "حذف الحدث";
}

<div class="container mt-4" style="padding-bottom: 80px;">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>هل أنت متأكد من حذف هذا الحدث؟</h4>
        <dl class="row mt-3">
            <dt class="col-sm-3">اسم الحدث:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">التصنيف:</dt>
            <dd class="col-sm-9">@Model.CategoryNavigation?.CategoryName</dd>

            <dt class="col-sm-3">المكان:</dt>
            <dd class="col-sm-9">@Model.PlaceName, @Model.City</dd>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <dt class="col-sm-3">الصورة:</dt>
                <dd class="col-sm-9">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="card shadow-sm mb-4" style="border-radius: 15px;">
                                <img src="~/images/@Model.Image" class="card-img-top img-fluid rounded" alt="صورة الحدث" style="max-height: 400px; object-fit: cover;">
                                <div class="card-body text-center">
                                    <h6 class="card-title">صورة الحدث</h6>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                لا توجد صورة متاحة لهذا الحدث.
                            </div>
                        }
                    </div>
                </dd>
            }
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group text-end">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> تأكيد الحذف
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> إلغاء
            </a>
        </div>
    </form>
</div>