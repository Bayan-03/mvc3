@model Event
@{
    ViewData["Title"] = "حذف الحدث";
}

<div class="delete-confirmation">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-danger">
        <h4>هل أنت متأكد من حذف هذا الحدث؟</h4>
        <dl class="row">
            <dt class="col-sm-3">اسم الحدث:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">التصنيف:</dt>
            <dd class="col-sm-9">@Model.CategoryNavigation?.CategoryName</dd>

            <dt class="col-sm-3">التاريخ:</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("yyyy/MM/dd")</dd>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <dt class="col-sm-3">الصورة:</dt>
                <dd class="col-sm-9">
                    <img src="@Model.Image" width="200" class="img-thumbnail" />
                </dd>
            }
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
            <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
        </div>
    </form>
</div>