@model EventMVC3.Models.Event
@{
    ViewData["Title"] = "تفاصيل الحدث";
}
@section Styles {
    <link rel="stylesheet" href="~/css/myevents/myevents.css" />
}
<div class="container " style="margin-top:5.5rem; !important;margin-bottom: 6.2rem !important;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white" style="background-color:#BEADFA;">
            <h3>@Model.Name</h3>
            <p class="mb-0">@Model.CategoryNavigation?.CategoryName</p>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- العمود الأول -->
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <div class="card shadow-sm mb-4" style="border-radius: 15px;">
                            <img src="~/images/@Model.Image" class="card-img-top img-fluid rounded" alt="صورة الحدث" style="max-height: 400px; object-fit: cover;">
                            <div class="card-body text-center">
                                <h6 class="card-title">صورة الحدث</h6>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            لا توجد صورة متاحة لهذا الحدث.
                        </div>
                    }
                </div>


                   
                <!-- العمود الثاني -->
                <div class="col-md-6">
                    <h5>معلومات الأساسية</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">اسم الحدث:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">المكان:</dt>
                        <dd class="col-sm-8">@Model.PlaceName</dd>

                        <dt class="col-sm-4">المدينة:</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">التصنيف:</dt>
                        <dd class="col-sm-8">@Model.CategoryNavigation?.CategoryName</dd>


                        <dt class="col-sm-4">تاريخ البداية:</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("yyyy/MM/dd")</dd>

                        <dt class="col-sm-4">تاريخ النهاية:</dt>
                        <dd class="col-sm-8">@(Model.FinishDate?.ToString("yyyy/MM/dd") ?? "لا يوجد")</dd>
                    </dl>
                    <h5>التفاصيل الإضافية</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">وقت البداية:</dt>
                        <dd class="col-sm-8">@(Model.StartTime?.ToString(@"hh\:mm") ?? "غير محدد")</dd>

                        <dt class="col-sm-4">وقت النهاية:</dt>
                        <dd class="col-sm-8">@(Model.FineshTime?.ToString(@"hh\:mm") ?? "غير محدد")</dd>

                        <dt class="col-sm-4">السعر:</dt>
                        <dd class="col-sm-8">@(Model.Price?.ToString("C") ?? "مجاني")</dd>

                        <dt class="col-sm-4">القيود العمرية:</dt>
                        <dd class="col-sm-8">@(Model.ConstraintAge ?? "لا توجد")</dd>
                    </dl>
                </div>
            </div>

            <!-- الوصف -->
            <div class="mt-4">
                <h5>وصف الحدث</h5>
                <hr />
                <p class="lead">@Model.Discription</p>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning" style="background-color:#4F1787; color:white;">
                <i class="fas fa-edit"></i> تعديل
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>