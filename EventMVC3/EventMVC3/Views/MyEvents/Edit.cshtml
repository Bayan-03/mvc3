@model EventMVC3.Models.Event

<div class="container mt-4">
    <hr />

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" class="form-control"
                            asp-items="@(ViewBag.Categories as SelectList)">
                        <option value="">-- اختر التصنيف --</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div> 

                


                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FinishDate" class="control-label"></label>
                    <input asp-for="FinishDate" type="date" class="form-control" />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" type="time" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FineshTime" class="control-label"></label>
                    <input asp-for="FineshTime" type="time" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">صورة الحدث</label>
                    <input type="file" name="imageFile" class="form-control" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="PlaceName" class="control-label"></label>
                    <input asp-for="PlaceName" class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConstraintAge" class="control-label"></label>
            <input asp-for="ConstraintAge" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Discription" class="control-label"></label>
            <textarea asp-for="Discription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Discription" class="text-danger"></span>
        </div>

        <div class="form-group text-end">
            <button type="submit" class="btn btn-primary">إضافة</button>
            <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
        </div>
    </form>
</div>

